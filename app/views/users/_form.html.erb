<div class="container p-5 mb-4 bg-light">
  <%= render 'shared/errors', obj: @user %>
  <%= form_with(model: @user, data: {turbo: false}) do |f| %>
    <form>
      <div class="form-group row mb-5">
        <%= f.label :username, class: "form-label" %><br/>
        <%= f.text_field :username, class: "form-control", placeholder: "Enter username"%>
      </div>
      <div class="form-group row mb-5">
        <%= f.label :email, class: "form-label" %><br/>
        <%= f.email_field :email, class: "form-control", placeholder: "Enter email"%>
      </div>
      <div class="form-group row mb-5">
        <%= f.label :password, class: "form-label" %><br/>
        <%= f.password_field :password, class: "form-control", placeholder: "Choose a password"%>
      </div>

      <div class="form-group row justify-content-center md-5">
        <%= f.submit "Sign up", class: "col-5 text-center btn btn-success"%>
      </div>      
    </form>
  <% end %> 
</div>