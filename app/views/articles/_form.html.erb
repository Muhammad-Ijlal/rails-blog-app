<div class="container p-5 mb-4 bg-light">
  <%= render 'shared/errors', obj: @article %>
  <%= form_with(model: @article, data: {turbo: false}) do |f| %>
    <form>
      <div class="form-group row mb-5">
        <%= f.label :title, class: "form-label" %><br/>
        <%= f.text_field :title, class: "form-control", placeholder: "Enter title"%>
      </div>
      <div class="form-group row mb-5">
        <%= f.label :description, class: "form-label" %><br/>
        <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Enter description"%>
      </div>
      <div class="form-group row justify-content-center md-5">
        <%= f.submit class: "col-5 text-center btn btn-success"%>
      </div>      
    </form>
  <% end %> 
</div>