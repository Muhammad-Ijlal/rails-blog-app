<div class="album py-5 bg-light">
  <div class="container">
    <div class="row">
      <% @articles.each do |article| %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"> 
              <title>Placeholder</title>
              <rect width="100%" height="100%" fill="#add45c"></rect>
              <text x="50%" y="50%" dominant-baseline="middle" text-anchor="middle" fill="#eceeef" dy=".3em"><%= article.title %></text>
            </svg>
            <div class="card-body">
              <p class="card-text"><%= article.description %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= link_to 'Show', article_path(article),  class: "btn btn-sm btn-success mx-1" %>
                  <% if logged_in? && (article.user == current_user || current_user.admin?)%>
                    <%= link_to 'Edit', edit_article_path(article), class: "btn btn-sm btn-primary mx-1" %>
                    <%= link_to 'Delete', article_path(article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-sm btn-danger mx-1" %>
                  <% end %>
                </div>
                <small class="text-muted"> Create <%= time_ago_in_words(article.created_at) %> ago</small>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <p> <%= link_to 'Create New Article', new_article_path, class: "btn btn-sm btn-success"%> </p>
  </div>
</div>
